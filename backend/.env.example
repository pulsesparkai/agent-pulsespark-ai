# Environment variables for PulseSpark AI Backend
# Copy this file to .env and fill in your values

# Application settings
APP_NAME=PulseSpark AI Backend
APP_VERSION=1.0.0
DEBUG=True

# Server configuration
HOST=0.0.0.0
PORT=8000

# CORS settings (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,https://agent.pulsespark.ai

# Authentication (if using JWT)
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (if needed for logging/analytics)
DATABASE_URL=postgresql://user:password@localhost/pulsespark

# Logging
LOG_LEVEL=INFO